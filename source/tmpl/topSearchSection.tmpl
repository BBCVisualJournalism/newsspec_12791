<div class="ns12791_topSearchHolder">
	<div class="ns12791_searchContentsHolder">
		<h1 class="ns12791_mainTitle">{{= mainTitle }}</h1>
		<h2 class="ns12791_introSubheading">{{= introSubheading }}</h4>
		<p class="ns12791_paragraph ns12791_introParagraph">{{= introParagraph_part1 }} <a href="{{= introParagraph_shazamLink_url }}">{{= introParagraph_shazamLink_text }}</a> {{= introParagraph_part2 }}</p>

		<div class="ns12791_searchBoxHolder">
			<form class="ns12791_cityFreeTextSearchHolder" id="ns12791_cityFreeTextSearchHolder">
				<label for="city-search--text-input" class="ns12791_searchBoxCta">{{= searchBoxCTACity }}</label>
				<div class="city-search--inputs">
	                <div class="city-search--autocomplete">
	                    <input type="text" placeholder="{{= searchBoxCityPlaceholder }}" id="city-search--text-input" class="search--text-input disabled" disabled="disabled">
	                </div>
	                <button type="submit" class="city-search--submit disabled" disabled="disabled">{{= searchSubmitButton }}</button>
	                <a href="#ns12791_countryFreeTextSearchHolder" class="ns12791_alternateSearch" id="ns12791_cantFindCity">{{= cantFindYourCity }}</a>
	            </div>
			</form>

			<form class="ns12791_countryFreeTextSearchHolder" id="ns12791_countryFreeTextSearchHolder" style="display:none;">
				<label for="country-search--text-input" class="ns12791_searchBoxCta">{{= searchBoxCTACountry }}</label>
				<div class="country-search--inputs">
	                <div class="country-search--autocomplete">
	                    <input type="text" placeholder="{{= searchBoxCountryPlaceholder }}" id="country-search--text-input" class="search--text-input" />
	                </div>
	                <select class="city-search--dropdown-input disabled" id="city-search--dropdown-input" data-select-city="{{= selectCity }}" disabled="disabled"></select>
	                <button type="submit" class="country-search--submit disabled" disabled="disabled">{{= searchSubmitButton }}</button>
	                <a href="#ns12791_cityFreeTextSearchHolder" class="ns12791_alternateSearch" id="ns12791_backToOriginalSearch">{{= backToOriginalSearch }}</a>
	            </div>
			</form>
		</div>
	</div>
</div>
